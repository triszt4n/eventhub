<div class="my-4">
  <div class="row mb-4">
    <h2 class="col-8">
      Events
    </h2>
    <div class="col-4 text-right">
      <%= link_to 'New', new_event_path, class: 'btn btn-primary float-lg-right' %>
    </div>
  </div>

  <% @events.each do |event| if event.published then %>
  <div class="card text-white bg-secondary mb-3">
    <h4 onclick="window.location.href = '/events/<%= event.id %>';" class="card-header clickable">
      <%= event.title %>
    </h4>

    <div class="card-body">
      <div class="row mb-2">
        <div class="lead col-12 col-lg-3 text-lg-right">
          Organized by:
        </div>
        <div class="col-12 col-lg-9 pt-1">
          WEDONTKNOWITYET
        </div>
      </div>
      <div class="row mb-3">
        <div class="lead col-12 col-lg-3 text-lg-right">
          Short description:
        </div>
        <div class="col-12 col-lg-9 pt-1">
          <%= event.short_desc %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="lead col-12 col-lg-3 text-lg-right">
          Coordinates:
        </div>
        <div class="col-12 col-lg-9 pt-1">
          <p class="mb-1">
            <%= event.place %>
          </p>
          <p class="m-0">
            <strong>
              <%= event.start_date %> - <%= event.end_date %>
            </strong>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="lead col-12 col-lg-3 text-lg-right">
          Theme of event:
        </div>
        <div class="col-12 col-lg-9 pt-1">
          <%= event.theme %>
        </div>
      </div>
    </div>
  </div>
  <% end end %>

</div>