<div class="row my-4">
  <h2 class="col-8">
    Events
  </h2>
  <div class="col-4 text-right">
    <%= link_to 'New', new_event_path, class: 'btn btn-primary float-lg-right' %>
  </div>
</div>

<% @events.each do |event| if event.published then %>
  <div class="card text-white bg-secondary mb-3">
    <h4 onclick="window.location.href = '/events/<%= event.id %>';" class="card-header clickable">
      <%= event.title %>
    </h4>

    <div class="card-body">
      <div class="row mb-2">
        <div class="lead col-12 col-lg-3 text-lg-right">
          Organized by:
        </div>
        <div class="col-12 col-lg-9 pt-1">
          <%= event.user.name %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="lead col-12 col-lg-3 text-lg-right">
          Short description:
        </div>
        <div class="col-12 col-lg-9 pt-1">
          <%= event.short_desc %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="lead col-12 col-lg-3 text-lg-right">
          Coordinates:
        </div>
        <div class="col-12 col-lg-9 pt-1">
          <p class="mb-1">
            <%= event.place %>
          </p>
          <p class="m-0">
            <strong>
              <%= l event.start_date, format: :datetime %> - 
              <% if event.start_date.to_date == event.end_date.to_date %>
                <%= l event.end_date, format: :time %>
              <% else %>
                <%= l event.end_date, format: :datetime %>
              <% end %>
            </strong>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="lead col-12 col-lg-3 text-lg-right">
          Theme of event:
        </div>
        <div class="col-12 col-lg-9 pt-1">
          <%= event.theme %>
        </div>
      </div>
    </div>
  </div>
<% end end %>
