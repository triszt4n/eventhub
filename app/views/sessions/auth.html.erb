<div class="row">
  <div class="col-12 text-center">
    <%= image_tag("eventhub-icon.svg", class: 'd-inline-block profile-pic mt-3 invert-pic') %>
    <h2 class="mt-2">Event Hub</h2>
    <p class="mt-5">Log in using your email address and password</p>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-lg-6">
    <%= form_with(model: @user, local: true) do |form| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger my-4" role="alert">
          Error (<%= @user.errors.count %>):
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <label for="user_email">Email address:</label>
        <%= form.text_field :email, class: 'form-control' %>
        <%= link_to 'Not a member yet? Register here.', register_path %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.text_field :password, class: 'form-control' %>
        <%= link_to 'Forgot your password?', forgotten_path %>
      </div>

      <div class="mt-3">
        <%= form.submit 'Log in', class: 'btn btn-success float-right' %>
      </div>
    <% end %>
  </div>
</div>
