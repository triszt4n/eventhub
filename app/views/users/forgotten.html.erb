<div class="row justify-content-center">
  <div class="col-12">
    <h2 class="my-4">Send new password</h2>
  </div>
</div>

<%= form_with do |form| %>
  <div class="form-group">
    <label for="user_email">
      <p class="m-0">
        Email address:
      </p>
      <small>
        You'll be sent a new password to use. Change it after logging in.
      </small>
    </label>
    <%= form.text_field :email, class: 'form-control' %>
  </div>
  
  <div class="mt-3">
    <%= form.submit 'Send', class: 'btn btn-success float-right' %>
  </div>
<% end %>